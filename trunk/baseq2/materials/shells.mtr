
gfx/shells/powerScreen
{
	noShadows
	twoSided
	{
		map		gfx/shell/power_screen.tga
		blend		add
		scroll		time * 1, time * 0.1
		scale		5, 5
		rotate		time * 10
		colored
	}
}

